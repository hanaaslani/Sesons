<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_margin="25dp"
    android:orientation="vertical"
    tools:context="com.example.haniyeaslani.myapplication.MainActivity">



        <TextView

            android:text="winter"
            android:gravity="top"
            android:textColor="#5964a7"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#5964a7"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">



        </ImageView>

        <TextView

            android:text="winter2"
            android:gravity="top"
            android:textColor="#172cab"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="#172cab"
            android:layout_width="match_parent"
            android:layout_height="4dp"></LinearLayout>



        <ImageView
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop">



        </ImageView>

</LinearLayout>
